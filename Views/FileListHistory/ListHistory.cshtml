@model IEnumerable<QuanLyTinTuc.Models.TINTUC>

@{
    ViewBag.Title = "ListHistory";
}

<h2>Danh sách file đã đăng</h2>


<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.MaTinTuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTaNgan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaTheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLoaiTIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NguoiDangBai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayDang)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTinTuc)
        </td>
        <td width="200px">
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td width="200px">
            @Html.DisplayFor(modelItem => item.MoTaNgan)
        </td>
        <td width="100px">
            @Html.DisplayFor(modelItem => item.MaTheLoai)
        </td>
        <td width="100px">
            @Html.DisplayFor(modelItem => item.MaLoaiTIn)
        </td>
        <td width="100px">
            @Html.DisplayFor(modelItem => item.NguoiDangBai)
        </td>
        <td width="300px">
            @Html.DisplayFor(modelItem => item.LinkFile)
        </td>
        <td width="200px">
            @Html.DisplayFor(modelItem => item.NgayDang)
        </td>
        
    </tr>
}

</table>
